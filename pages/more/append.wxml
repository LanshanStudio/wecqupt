<!--append.wxml-->
<view class="container">
  <view class="hd">
    <image class="title" src="/images/more/title.png" mode="aspectFit"></image>
    <image class="logo" src="/images/more/logo.png"></image>
  </view>
  <view class="bd">
    <text class="append-title">完善信息</text>
    <form class="append-form">
        <view class="input-group">
            <text class="input-label">寝室楼栋</text>
            <picker class="{{!ibuilding?'placeholder':''}}" bindchange="buildingPicker" value="{{ibuilding}}" range="{{buildings}}">
                <text wx:if="{{ibuilding === false}}">请选择寝室楼栋</text>
                <text wx:else>{{buildings[ibuilding]}}</text>
            </picker>
        </view>
        <view class="input-group {{room_focus ? 'active' : ''}}">
            <text class="input-label">寝室号</text>
            <input type="number" id="room" maxlength="3" placeholder="请输入寝室号（三位）" bindinput="roomInput" bindfocus="inputFocus" bindblur="inputBlur" />
        </view>
        <view class="input-group {{sfz_focus ? 'active' : ''}}">
            <text class="input-label">身份证后6位</text>
            <input type="number" id="sfz" password="true" maxlength="6" placeholder="请输入身份证后6位" bindinput="sfzInput" bindfocus="inputFocus" bindblur="inputBlur" />
        </view>
    </form>
    <view class="confirm-btn">
        <text>保存</text>
    </view>
  </view>
</view>
